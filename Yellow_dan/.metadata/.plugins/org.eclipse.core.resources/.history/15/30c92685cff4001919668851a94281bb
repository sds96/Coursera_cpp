#ifndef DATE_H_
#define DATE_H_

#include <iostream>

class Date{
public:
	Date(int new_year, int new_month, int new_day);
	int GetYear() const;
	int GetMonth() const;
	int GetDay() const;

private:
	  int year;
	  int month;
	  int day;
};

bool operator<(const Date& lhs, const Date& rhs);

std::ostream& operator<<(std::ostream& stream, const Date& date);

Date ParseDate(const std::istringstream& date);

#endif /* DATE_H_ */
